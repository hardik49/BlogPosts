<div class="col-lg-12">
  <div class="container">
    <div id="postInsert">
      <form method="POST" class="form-handle" id="addPost" action="/user/post">
        <h1 style="text-align: center;">ADD POSTS</h1>
        <hr />
        <br />
        <div class="form-group col-lg-4">
          <label>Title</label>
        </div>
        <div class="form-group col-lg-12">
          <input type="text" id="postTitle" name="title" class="form-control" />
        </div>
        <div class="form-group col-lg-4">
          <label>Content</label>
        </div>
        <div class="form-group col-lg-12">
          <textarea name="content" id="postContent" class="form-control" cols="50" rows="10"></textarea>
        </div>
        <div class="col-lg-12 btn-center" >
          <input
            class="btn btn-success col-lg-5"
            value="ADD"
            type="submit"
          />
          <button class="btn btn-danger col-lg-5">CANCEL</button>
        </div>
      </form>
    </div>
  </div>
</div>
