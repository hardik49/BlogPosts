<div class="container margin-30">
  <form method="POST" class="form-handle" action="/user/post">
    <div>
      <h1 style="text-align: center;">ADD POSTS</h1>
      <hr><br>
      <div class="form-group col-lg-4 margin-30">
        <label>Title</label>
      </div>
      <div class="form-group col-lg-8 margin-30">
        <input required type="text" name="title" class="form-control" />
      </div>
      <div class="form-group col-lg-4">
        <label>content</label>
      </div>
      <div class="form-group col-lg-8">
        <textarea required name="content" cols="50" rows="10"></textarea>
      </div>
      <div class="form-group">
        <input class="btn btn-success col-lg-4" value="ADD" type="submit" style="margin:2% 0  2% 0;" />
        <button class="btn btn-danger col-lg-4">CANCEL</button>
      </div>
    </div>
  </form>
</div>