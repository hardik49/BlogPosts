<%if(isAdded) {%>
  <div class="alert alert-success fade show" role="alert">
    <strong>New posts created!</strong> <%=isAdded%>
  </div>
<%}%>
<div id="headerPost">
  <h4>All Posts</h4>
</div>
<% if(posts.length) { %>
  <% for(let i = 0; i < posts.length; i++) { %>
  <div class="box-container">
    <div class="head-container">
      <h4>TITLE : <%=posts[i].title%> <span id="createdAt"><em>Published At: <%= posts[i].createdAt%></em></span></h4>
    </div>
    <div class="body-container">
      <p><%=posts[i].content%></p>
    </div>
  </div>
  <% } %>
  <% } else { %>
  <div class="box-container">
    <h1 style="text-align: center; padding-top:7%;">Sorry! No post available.</h1>
    <h5 style="text-align: center;">To publish new post <a href="/user/post">Click here..</a> </h5>
  </div>
  <% } %>