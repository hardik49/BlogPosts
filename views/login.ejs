<div class="img-back">
  <% if(message) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong>Invalid Access!</strong> <%= message%>
    </div>
  <% } %>
  <% if(register) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong>User Registered!</strong> <%=register%>
    </div>
  <%}%>
  <div class="col-lg-12">
    <div class="container">
      <div class="loginBox">
        <form method="POST" class="form-handle" id="login" action="/user/login">
          <div>
            <h1 style="text-align: center;">LOGIN</h1>
            <hr />
            <br />
            <div class="form-group col-lg-12">
              <input
                type="email"
                id="email"
                name="email"
                autofocus
                class="form-control"
                placeholder="Enter email"
              />
            </div>
            <div class="form-group col-lg-12">
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Enter password"
              />
            </div>
            <div class="form-group btn-center">
              <input
                class="btn btn-success col-lg-4"
                value="LOGIN"
                type="submit"
              />
              <button class="btn btn-danger col-lg-4">CANCEL</button>
            </div>
            <div style="text-align: center;">
            <a href="/user/register" style="text-align: center!important;">
              Haven't registered yet? Click to register
            </a>
          </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
