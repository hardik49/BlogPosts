<div class="img-back">
  <div class="col-lg-12">
    <div class="container">
      <div id="signUpContainer">
        <form method="POST" class="form-handle" id="signup" action="/user/register">
          <div>
            <h1 style="text-align: center;">Sign Up</h1>
            <hr />
            <br />
            <div class="form-group col-lg-12">
              <input
                type="text"
                autofocus
                id="name"
                name="name"
                class="form-control"
                placeholder="Enter name"
              />
            </div>
            <div class="form-group col-lg-12">
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter email"
              />
            </div>
            <div class="form-group col-lg-12">
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Enter password"
              />
            </div>
            <div class="form-group col-lg-12">
              <input
                type="password"
                id="confirmPassword"
                class="form-control"
                placeholder="Confirm password"
              />
            </div>
            <div class="form-group">
              <input
                class="btn btn-success col-lg-12"
                type="submit"
                value="Sign up"
                style="margin:2% 0  2% 0;"
              />
            </div>
          </div>
          <div style="text-align: center;">
            <a href="/user/login">Already registered? Click here to login</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
