<div class="container margin-30">

  <form method="POST" class="form-handle" action="/user/register">
    <div>
      <h1 style="text-align: center;">Sign Up</h1>
      <hr><br>
      <div class="form-group col-lg-12 margin-30">
        <input required type="text" onblur="validatePassword()" name="name" class="form-control"
          placeholder="Enter name" />
      </div>
      <div class="form-group col-lg-12 margin-30">
        <input required type="email" name="email" class="form-control" placeholder="Enter email" />
      </div>
      <div class="form-group col-lg-12">
        <input required type="password" id="password" name="password" class="form-control"
          placeholder="Enter password" />
      </div>
      <div class="form-group col-lg-12">
        <input required type="password" id="confirmPassword" class="form-control" placeholder="Confirm password" />
      </div>
      <div class="form-group" style="margin-left: 25%;">
        <input class="btn btn-success col-lg-4" type="submit" value="Sign up" style="margin:2% 0  2% 0;" />
        <button class="btn btn-danger col-lg-4">CANCEL</button>
      </div>
    </div>

  </form>
</div>